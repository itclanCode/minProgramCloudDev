<!--pages/blog-edit/blog-edit.wxml-->
<view class="container">
  <textarea class="content" bindinput="onInput" placeholder="分享内容" maxlength="140" auto-focus bindfocus="onFoucs" bindblur="onBlur"></textarea>
  <view class="max-word">
     <text class="words-num">{{wordsNum}}/140</text>
  </view>
  <view class="image-list">
    <!-- 显示图片 -->
    <block wx:for="{{images}}" wx:key="*this">
       <view class="image-wrap">
          <image class="image" src="{{item}}" mode="aspectFill" bind:tap="onPrevImage" data-imgsrc="{{item}}"></image>
          <i class="iconfont icon-shanchu" bind:tap="onDelImage" data-index="{{index}}"></i>
       </view>
    </block>
    <!-- 选择图片 -->
    <view class="image-wrap selectphoto" hidden="{{!selectPhoto}}" bind:tap="onChooseImage">
       <i class="iconfont icon-add"></i>
    </view>
  </view>
</view>

<view class="footer" style="bottom:{{footerBottom}}px">
    <button class="send-btn" bind:tap="send">发布</button>
</view>


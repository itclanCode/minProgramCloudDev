<!--pages/blog-edit/blog-edit.wxml-->
<view class="container">
  <textarea class="cntent" bindinput="onInput" placeholder="分享内容" maxlength="140" auto-focus bindfocus="onFoucs" bindblur="onBlur"></textarea>

  <view class="image-list">
    <!-- 显示图片 -->

    <!-- 选择图片 -->
    <view class="image-wrap selectphoto">
       <i class="iconfont icon-add"></i>
    </view>
  </view>
</view>

<view class="footer" style="bottom:{{footerBottom}}px">
    <text class="words-num">{{wordsNum}}</text>
    <button class="send-btn">发布</button>
</view>

